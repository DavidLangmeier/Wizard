<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="352dp"
    android:layout_height="480dp"
    android:background="@color/colorPrimaryDark"
    android:padding="4dp"
    android:layout_gravity="right">

    <TextView
        android:id="@+id/txtclose"
        android:layout_width="33dp"
        android:layout_height="36dp"
        android:layout_gravity="end"
        android:background="@drawable/kreisbackground"
        android:gravity="center"
        android:text="@string/popup_closeX"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_view_boarder_rechtange"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_view_boarder_rechtange"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_player3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_view_boarder_rechtange"
            android:text="TextView" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_player11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_view_boarder_rechtange"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_player22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_view_boarder_rechtange"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_player33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_view_boarder_rechtange"
            android:text="TextView" />
    </TableRow>


</LinearLayout>